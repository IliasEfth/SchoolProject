  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\HomeIcon.png" />
    <None Remove="Assets\Login.png" />
    <None Remove="Assets\meletiou.jpg" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\HomeIcon.png" />
